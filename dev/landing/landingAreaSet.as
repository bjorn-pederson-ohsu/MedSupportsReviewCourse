package landing{	import flash.display.MovieClip;	import buttonBuild.landingButtonSet;	import flash.events.EventDispatcher;	import flash.events.Event;	public class landingAreaSet extends MovieClip {		public static var UPDATE:String = 'ButtonClicked';		private var areaload:String = "";		//private var infoBx:infoArea;		private var descBox:descriptionBox;		private var dircBox:descriptionBox;		private var landingBut:landingButtonSet;		private var xStart:int = 20;		private var yStart:int = 110;		private var padding:int = 15;		public function landingAreaSet(s:String) {			// constructor code			areaload = s;			if (areaload == "welcome")			{				trace("welcome set");				setArea();			}		}		private function setArea():void {			descBox=new descriptionBox();			addChild(descBox);			descBox.slider.visible = false;			descBox.name = "descBox";			descBox.y = 20;			descBox.descText.text = "Welcome to the medication review course";			if (descBox.descText.maxScrollV > 1)			{				descBox.slider.visible = true;				descBox.slider.maxScrollPosition = descBox.descText.textHeight;				descBox.x=((this.bg.width/2)-(descBox.width/2));			} else			{				descBox.x=((this.bg.width/2)-(descBox.descText.width/2));			}			dircBox=new descriptionBox();			addChild(dircBox);			dircBox.slider.visible = false;			dircBox.visible = false;			dircBox.name = "dircBox";			dircBox.descText.width = 270;			dircBox.descText.height = 266;			dircBox.slider.x = 270;			dircBox.slider.y = 0;			dircBox.slider.height = dircBox.descText.height;			dircBox.x = 639;			dircBox.y=(this.height/2)-(dircBox.height/2);			setButtons();		}		private function setButtons():void {			var names:Array = ["Start","Continue","Feedback"];			var n:uint = names.length - 1;			for (var i:int=0; i<=n; i++)			{				landingBut = new landingButtonSet("" + names[i] + "");				addChild(landingBut);				landingBut.name = "" + names[i].toLocaleLowerCase() + "Button";				landingBut.addEventListener(landingButtonSet.UPDATE,update);				landingBut.x = xStart;				landingBut.y = yStart;				yStart+=(landingBut.height+padding);				landingBut.visible=false			}		}		private function update(event:Event):void {			trace("From Landing Area:"+event.target.name);			dispatchEvent(new Event(landingAreaSet.UPDATE));		}	}}