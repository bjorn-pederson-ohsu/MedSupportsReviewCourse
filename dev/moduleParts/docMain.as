package moduleParts{	import flash.display.MovieClip;	import flash.events.EventDispatcher;	import flash.events.Event;	import docViewer.*;	public class docMain extends MovieClip {				private var model:docModel		private var view:docView		private var control:docController				private var docXml:XML		private var bgwidth:int;		private var bgheight:int;		public function docMain(i:int,v:int,xml:XML) {			// constructor code			bgwidth = i;			bgheight = v;			docXml = new XML(xml)			addEventListener(Event.ADDED_TO_STAGE,addedtostage);		}		private function addedtostage(event:Event):void {			removeEventListener(Event.ADDED_TO_STAGE,addedtostage);			addEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);			model= new docModel();			control = new docController(model);			view = new docView(model,control,docXml, bgwidth, bgheight);			addChild(view);					}		private function removedFromStage(event:Event):void {			removeEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);		}	}}