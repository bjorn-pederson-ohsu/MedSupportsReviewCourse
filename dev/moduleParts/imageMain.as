package moduleParts{	import flash.display.MovieClip;	import flash.events.EventDispatcher;	import flash.events.Event;	import imageViewer.*;	import caurina.transitions.Tweener;	public class imageMain extends MovieClip {				private var model:imageModel		private var view:imageView		private var control:imageController				private var imageXml:XML		private var bgwidth:int;		private var bgheight:int;		public function imageMain(i:int,v:int,xml:XML) {			// constructor code			bgwidth = i;			bgheight = v;			imageXml = new XML(xml)			addEventListener(Event.ADDED_TO_STAGE,addedtostage);		}		private function addedtostage(event:Event):void {			removeEventListener(Event.ADDED_TO_STAGE,addedtostage);			addEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);			model= new imageModel();			control = new imageController(model);			view = new imageView(model,control,imageXml, bgwidth, bgheight);			addChild(view);					}		private function removedFromStage(event:Event):void {			removeEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);		}	}}