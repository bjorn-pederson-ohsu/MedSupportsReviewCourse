package com.reflektii.db{	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.net.URLLoader;	import flash.net.URLRequest;	public class dbxml extends EventDispatcher	{		public static var UPDATE:String = 'XMLLoaded';		private var loader:URLLoader;		private var locale:URLRequest;		private var url:String = "";		private var _xmlfinal:XML;		public function dbxml(s:String)		{			// constructor code			url = s;			loader = new URLLoader;			locale = new URLRequest(url);			loader.load(locale);			loader.addEventListener(Event.COMPLETE, onComplete);		}		private function onComplete(event:Event):void		{			try			{				_xmlfinal = new XML(event.target.data);				dispatchEvent(new Event(dbxml.UPDATE));			}			catch (e:Error)			{				trace("xmlLoaded(): error = " + e.message);				return;			}		}		public function get xmlreturn():XML		{			return _xmlfinal;		}	}}