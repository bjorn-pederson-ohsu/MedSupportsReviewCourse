package supportParts{	import flash.display.MovieClip;	import flash.events.EventDispatcher;	import flash.events.Event;	import helpViewer.*;	import caurina.transitions.Tweener;	public class helpMain extends MovieClip {				private var model:helpModel		private var view:helpView		private var control:helpController				private var helpXml:XML		private var bgwidth:int;		private var bgheight:int;		public function helpMain(i:int,v:int,xml:XML) {			// constructor code			bgwidth = i;			bgheight = v;			helpXml = new XML(xml)			trace(helpXml)			addEventListener(Event.ADDED_TO_STAGE,addedtostage);		}		private function addedtostage(event:Event):void {			removeEventListener(Event.ADDED_TO_STAGE,addedtostage);			addEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);			model= new helpModel();			control = new helpController(model);			trace("from helpMain: "+bgwidth, bgheight)			view = new helpView(model,control,helpXml, bgwidth, bgheight);			addChild(view);			view.name="helpView"					}		private function removedFromStage(event:Event):void {			removeEventListener(Event.REMOVED_FROM_STAGE,removedFromStage);			removeChild(view)			view=null		}	}}