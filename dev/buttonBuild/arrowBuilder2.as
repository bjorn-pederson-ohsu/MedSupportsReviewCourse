package buttonBuild{	import flash.events.Event;	import flash.display.Sprite;	import flash.display.Shape;	import flash.display.CapsStyle;    import flash.display.JointStyle;	public class arrowBut extends Sprite {		//private var tween:Tweener		//private var filter:FilterShortcuts		//private var mainArea:subMenumainArea;		private var myFrame:Shape;		private var mainArea:Sprite;		private var bg:Sprite;		private var bgFrame:Sprite;		public function arrowBut() {			// constructor code						addEventListener(Event.ADDED_TO_STAGE,arrowBuild);		}		private function modBgBuild(event:Event):void {			removeEventListener(Event.ADDED_TO_STAGE,modBgBuild);			mainArea = new Sprite() ;			addChild(mainArea);			bg=new Sprite ();			mainArea.addChild(bg);			myFrame = new Shape() ;			myFrame.graphics.moveTo((widthNum-10),0);			myFrame.graphics.lineStyle(1, 0x000000, 1, true,"normal", CapsStyle.ROUND, JointStyle.ROUND, 0);			myFrame.graphics.beginFill(0xf4f4d8,.4);			myFrame.graphics.moveTo(40,0)			myFrame.graphics.lineTo(80,10);			myFrame.graphics.lineTo(0, (heightNum-10));			myFrame.graphics.curveTo(0,heightNum,10,heightNum);			myFrame.graphics.lineTo((widthNum-10), heightNum);			myFrame.graphics.curveTo(widthNum,heightNum,widthNum,(heightNum-10));			myFrame.graphics.lineTo(widthNum, 10);			myFrame.graphics.curveTo(widthNum,0,(widthNum-10),0);			myFrame.graphics.endFill();			bg.addChild(myFrame);		}	}}